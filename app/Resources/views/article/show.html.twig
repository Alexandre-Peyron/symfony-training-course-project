{% extends 'layout-admin.html.twig' %}

{% block content %}

    <div class="page-title">
        <div class="title_left">
            <h3>Articles <small>{{ article.title }}</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_content">

                    <table>
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ article.id }}</td>
                        </tr>
                        <tr>
                            <th>Createdat</th>
                            <td>{% if article.createdAt %}{{ article.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Updatedat</th>
                            <td>{% if article.updatedAt %}{{ article.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ article.title }}</td>
                        </tr>
                        <tr>
                            <th>Hat</th>
                            <td>{{ article.hat }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ article.content|raw }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('admin_article_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-danger pull-right">
            {{ form_end(delete_form) }}

        </div>
    </div>
{% endblock %}
