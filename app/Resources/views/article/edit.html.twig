{% extends 'layout-admin.html.twig' %}

{% block content %}

    <div class="page-title">
        <div class="title_left">
            <h3>Articles <small>Modification</small></h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_content">
                    {{ form_start(edit_form, {attr: {'class': 'form-horizontal form-label-left', 'novalidate': 'novalidate'}}) }}

                        <div class="form-group">
                            {{ form_label(edit_form.title, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(edit_form.title, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Titre'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.hat, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(edit_form.hat, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder': 'Chapeau'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.cover, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(edit_form.cover, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.content, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                {{ form_widget(edit_form.content, {'attr': {'class': 'form-control col-md-12 col-xs-12', 'placeholder': 'Chapeau'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.category, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.tags, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {#{{ form_widget(edit_form.tags, {'attr': {'class': ''}}) }}#}
                                {% for t in edit_form.tags %}
                                    <div class="checkbox">
                                        {{ form_label(t, null, {'label_attr': {'class': ''}}) }}
                                        {{ form_widget(t, {'attr': {'style': 'position:relative;margin-left:0px'}}) }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>


                        {{ form_widget(edit_form) }}

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a href="{{ path('admin_article_index') }}" class="btn btn-primary pull-left" >Retour Ã  la liste</a>
                                <input type="submit" value="Modifier" class="btn btn-success" />
                            </div>
                        </div>

                    {{ form_end(edit_form) }}
                </div>
            </div>


            {{ form_start(delete_form) }}
                <input class="btn btn-danger pull-right" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
