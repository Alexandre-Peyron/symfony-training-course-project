{% extends 'layout-front.html.twig' %}

{% trans_default_domain "messages" %}

{% block header %}
    <header class="intro-header" style="background-image: url({{ asset('front/img/home-bg.jpg') }})">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ 'home.title'|trans }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ "home.subtitle"|trans }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}

    {% for article in articles %}
        <div class="post-preview">
            <a href="{{ path('front_article_show', {'slug' : article.slug }) }}">
                <h2 class="post-title">
                    {{ article.title }}
                </h2>
                <h3 class="post-subtitle">
                    {{ article.hat }}
                </h3>
            </a>
            <p class="post-meta">{{ 'global.posted_at'|trans }} {{ article.createdAt|date('d-m-Y') }}</p>
        </div>
        <hr>
    {% endfor %}

    <!-- Pager -->
    {#<ul class="pager">#}
        {#<li class="next">#}
            {#<a href="#">Older Posts &rarr;</a>#}
        {#</li>#}
    {#</ul>#}
{% endblock content %}